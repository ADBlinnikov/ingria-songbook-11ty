is-land(on:visible)
    div#navbar-app(v-scope='Navbar()' @vue:mounted="updateSheetsVisibility()")
        template(data-island)
            nav.navbar.has-background-primary.is-transparent(role="navigation" aria-label="main navigation")
                .navbar-brand
                    a.navbar-item(href="/")
                        img(src="/favicon.png" width="28" height="28" alt="Logo")
                    a.navbar-burger(
                        role="button"
                        v-bind:class="{ 'is-active': menuState }"
                        @click='menuState = !menuState'
                        aria-label="menu"
                        aria-expanded="false"
                    )
                        span(aria-hidden="true")
                        span(aria-hidden="true")
                        span(aria-hidden="true")
                .navbar-menu.has-background-primary#navMenu(
                    v-bind:class="{ 'is-active': menuState }"
                )
                    .navbar-start
                        a.navbar-item(href="/")
                            span.has-text-dark.has-text-weight-semibold ДОМОЙ
                        a.navbar-item(href="/hymns")
                            span.has-text-dark.has-text-weight-semibold ГИМНЫ
                    .navbar-end
                        .navbar-item
                            .buttons
                                a.button.is-link(href="/playbook/") Я в церкви
                        .navbar-item
                            .field
                                input#showMusicSheet.switch.is-info(
                                    type="checkbox" 
                                    v-bind:checked="switchState"
                                    @click="toggle"
                                )
                                label(for="showMusicSheet") Ноты
    template(data-island)
        script(type="module")
            include index.js
