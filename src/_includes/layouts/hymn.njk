---
layout: layouts/base.pug
---

{% block js %}
    <script src="/scripts/hymns-pagination.js" type="text/javascript"></script>
{% endblock %}
<div class="block">
    <div class="tile is-ancestor m-2 p-2">
        <div class="tile is-parent is-6 is-vertical">
            <div class="tile is-child box">
                <p class="title">Гимн {{ name }}</p>
                <p class="subtitle">Раздел: {{ section }}</p>
            </div>
            {% if abcNotation %}
                <div class="tile is-child box music-sheet">
                    <div class="abcString" hidden>{{ abcNotation }}</div>
                    <div id="hymn-paper" class="paper"></div>
                </div>
            {% endif %}
        </div>
        <div class="tile is-parent">
            <div class="tile is-child box">{{ content | safe }}</div>
        </div>
    </div>
</div>
<div class="block">
    <nav id="hymn-pagination" class="pagination is-centered" role="navigation" aria-label="pagination"></nav>
</div>